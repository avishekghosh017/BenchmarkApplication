<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.felight.bitsnsweets.AudioPlayerActivity"
    android:background="#ff25ea">


    <ImageButton
        android:src="@drawable/musicplayer"
        android:onClick="selectAudio"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/btnSelectAudio"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnPlay"
        android:layout_alignEnd="@+id/btnPlay"
        android:layout_alignLeft="@+id/btnPlay"
        android:layout_alignStart="@+id/btnPlay"
        android:scaleType="fitXY" />

    <ImageButton
        android:src="@drawable/play"
        android:onClick="playAudio"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/btnPlay"
        android:layout_below="@+id/btnSelectAudio"
        android:layout_alignLeft="@+id/btnStop"
        android:layout_alignStart="@+id/btnStop"
        android:scaleType="fitXY" />

    <ImageButton
        android:src="@drawable/pause"
        android:onClick="stopAudio"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:id="@+id/btnStop"
        android:layout_below="@+id/btnPlay"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY" />
</RelativeLayout>
