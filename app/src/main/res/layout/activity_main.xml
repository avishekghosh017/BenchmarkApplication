<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/musica">

    <Button
        android:onClick="navigation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Greet User"
        android:id="@+id/btnGU"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:onClick="navigation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Basic Calc"
        android:id="@+id/btnBasic"
        android:layout_below="@+id/btnGU"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:onClick="navigation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Jokes"
        android:id="@+id/btnJokes"
        android:layout_below="@+id/btnBasic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:onClick="navigation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Media Controller"
        android:id="@+id/btnMC"
        android:layout_below="@+id/btnJokes"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <Button
        android:onClick="navigation"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Go to Google"
        android:id="@+id/btnGoo"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
