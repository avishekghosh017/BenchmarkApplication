<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626">
    <GridLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="5dp">
        <ImageButton
            android:layout_rowWeight="1"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/greet"
            android:layout_width="180dp"
            android:layout_height="140dp"
            android:id="@+id/btnGreet"
            android:onClick="navigate"
            android:scaleType="fitXY" />
        <ImageButton
            android:layout_rowWeight="1"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/calc"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/btnBasic"
            android:foregroundGravity="right"
            android:onClick="navigate"
            android:scaleType="fitXY" />
    </GridLayout>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">
    <GridLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_rowWeight="3"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/jokes"
            android:layout_width="280dp"
            android:layout_height="140dp"
            android:id="@+id/btnJokes"
            android:onClick="navigate"
            android:scaleType="fitXY" />
        <GridLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_rowWeight="2">
            <ImageButton
                android:layout_columnWeight="1"
                android:onClick="navigate"
                android:src="@drawable/sms"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:id="@+id/ibSendSms"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY" />
            <ImageButton
                android:layout_columnWeight="1"
                android:onClick="navigate"
                android:src="@drawable/chrome"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:id="@+id/ibGoogle"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY" />
        </GridLayout>
    </GridLayout>
    </HorizontalScrollView>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp">
    <GridLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_rowWeight="1"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/musicplayer"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/btnMedia"
            android:onClick="navigate"
            android:scaleType="fitXY" />
        <ImageButton
            android:layout_rowWeight="1"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/benchmark"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/btnBench"
            android:onClick="navigate"
            android:scaleType="fitXY" />
        <ImageButton
            android:layout_rowWeight="1"
            android:layout_gravity="center_horizontal"
            android:onClick="navigate"
            android:src="@drawable/flashlight"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/ibFlashLight"
            android:scaleType="fitXY" />
    </GridLayout>
    </HorizontalScrollView>
    <Button
        android:layout_gravity="center_horizontal"
        android:onClick="navigate"
        android:id="@+id/btnNotification"
        android:text="Notification"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="@drawable/buttonshape" />
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">
    <GridLayout
        android:columnCount="5"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_rowWeight="1"
            android:layout_gravity="center_horizontal"
            android:onClick="navigate"
            android:src="@drawable/photoshop"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/ibImagePro"
            android:scaleType="fitXY" />
        <ImageButton
            android:layout_rowWeight="1"
            android:layout_gravity="center_horizontal"
            android:onClick="navigate"
            android:src="@drawable/icon7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/ibGoogleNews"
            android:scaleType="fitXY" />
        <ImageButton
            android:layout_rowWeight="1"
            android:layout_gravity="center_horizontal"
            android:onClick="navigate"
            android:src="@drawable/icon7"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/ibFelightNews"
            android:scaleType="fitXY" />
        <ImageButton
            android:layout_rowWeight="1"
            android:layout_gravity="center_horizontal"
            android:onClick="navigate"
            android:src="@drawable/icon5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/ibContext"
            android:scaleType="fitXY" />
        <ImageButton
            android:layout_gravity="center_horizontal"
            android:onClick="navigate"
            android:src="@drawable/icon4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/ibActivityForResult"
            android:scaleType="fitXY" />
    </GridLayout>
    </HorizontalScrollView>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">
        <GridLayout
            android:rowCount="2"
            android:columnCount="5"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_rowWeight="1"
                android:layout_gravity="center_horizontal"
                android:onClick="navigate"
                android:src="@drawable/mediaplay"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:id="@+id/ibAudioPlayer"
                android:scaleType="fitXY" />
            <ImageButton
                android:onClick="navigate"
                android:layout_height="130dp"
                android:layout_width="130dp"
                android:src="@drawable/videoplayer"
                android:id="@+id/ibVideoPlayer"
                android:scaleType="fitXY" />
            <ImageButton
                android:layout_row="0"
                android:layout_column="2"
                android:onClick="navigate"
                android:layout_height="130dp"
                android:layout_width="130dp"
                android:src="@drawable/gesture"
                android:id="@+id/ibGesture"
                android:scaleType="fitXY" />

        </GridLayout>
    </HorizontalScrollView>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_row="0"
                android:layout_column="0"
                android:onClick="navigate"
                android:layout_height="130dp"
                android:layout_width="130dp"
                android:id="@+id/ibSensor"
                android:scaleType="fitXY"
                android:src="@drawable/sensor"/>
            <ImageButton
                android:layout_row="0"
                android:layout_column="1"
                android:onClick="navigate"
                android:layout_height="130dp"
                android:layout_width="130dp"
                android:id="@+id/ibSensorData"
                android:scaleType="fitXY"
                android:src="@drawable/sensor"/>
            <ImageButton
                android:layout_row="0"
                android:layout_column="2"
                android:onClick="navigate"
                android:layout_height="130dp"
                android:layout_width="130dp"
                android:id="@+id/ibCompass"
                android:scaleType="fitXY"
                android:src="@drawable/img_compass"/>
        </GridLayout>
    </HorizontalScrollView>
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="5dp">
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageButton
                android:layout_row="0"
                android:layout_column="0"
                android:onClick="navigate"
                android:layout_height="130dp"
                android:layout_width="130dp"
                android:id="@+id/ibSharedPref"
                android:scaleType="fitXY"
                android:src="@drawable/musica"/>
            <ImageButton
                android:layout_row="0"
                android:layout_column="1"
                android:onClick="navigate"
                android:layout_height="130dp"
                android:layout_width="130dp"
                android:id="@+id/ibShakePlay"
                android:scaleType="fitXY"
                android:src="@drawable/shake"/>

        </GridLayout>
    </HorizontalScrollView>


</LinearLayout>
</ScrollView>